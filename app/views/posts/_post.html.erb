<div class="postContainer">
	<h3><%= link_to post.title, post %></h3>
  <h4>Posted by <%= link_to post.user.name, user_path(post.user.id) %> at <%= post.created_at %> | This post has <%= post.comments.size %> comment(s) so far.</h4>

	<%= markdown post.body %>

  <h5>Tagged as: <%= render :partial => post.tags %></h5>
  
  <% if @current_user %>
    <% if @current_user.admin %>
	  <p class="adminLinks" ><%= link_to 'edit post', edit_post_path(post) %> | <%= link_to 'delete post', post, :confirm => "Really!? This cannot be undone.", :method => "delete" %></p>
    <% end %>
  <% end %>
</div>
