<h2><%= @post.title %></h2>

<%= markdown @post.body %>

<% unless @post.tag_list.empty? %>
  <p><strong>Tags:</strong> <%= @post.tag_list %></p>
<% end %>

<%= error_messages_for :comment %>

<% unless @post.comments.empty? %>
	<h3>Comments (<%= @post.comments.size %>)</h3>
	<% @post.comments.each do |comment| %>
  <p><%= comment.user.name %> says ...</p>
	<%= markdown comment.body %>
	<%= link_to 'edit comment', edit_post_comment_path(@post, comment) %>
	<%= link_to 'delete comment', [@post, comment], :confirm => 'Do you want to delete this comment?', :method => 'delete' %>
	<% end %>
<% end %>

<h3>Join the Discussion</h3>
<%= render :partial => @comment = Comment.new, :locals => { :button_name => 'post comment' } %>

<%= link_to 'edit post', edit_post_path %> | 
<%= link_to 'home', posts_path %>
