<% form_for([@post, @comment]) do |f| %>
	<% if @current_user %>
  <p>
    You are currently logged in as <%= @current_user.name %>
  </p>
  <% else %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :homepage %>
    <%= f.text_field :homepage %>
  </p>
  <% end %>
  
  <p>
		<b>Comment Body | <%= link_to "Markdown formatting  supported", "http://en.wikipedia.org/wiki/Markdown" %></b><br />
		<%= f.text_area :body %>
	</p>

	<p><%= f.submit button_name %></p>
<% end %>
